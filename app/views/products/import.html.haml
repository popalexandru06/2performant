= form_tag map_fields_products_path, class: "map-fields-form form-row" do
  .col-md-12.form-group
    %h2 Product details

  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.source_id'
    = select_tag "product[source_id]", options_for_select(@select_options, @file_columns.include?('product_id') ? 'product_id' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.source_id'
    = select_tag "product[source_id]", options_for_select(@select_options, @file_columns.include?('product_id') ? 'product_id' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.title'
    = select_tag "product[title]", options_for_select(@select_options, @file_columns.include?("title") ? "title" : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.aff_code'
    = select_tag "product[aff_code]", options_for_select(@select_options, @file_columns.include?('aff_code') ? 'aff_code' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.price'
    = select_tag "product[price]", options_for_select(@select_options, @file_columns.include?('price') ? 'price' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.old_price'
    = select_tag "product[old_price]", options_for_select(@select_options, @file_columns.include?('old_price') ? 'old_price' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.short_message'
    = select_tag "product[short_message]", options_for_select(@select_options, @file_columns.include?('short_message') ? 'short_message' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.description'
    = select_tag "product[description]", options_for_select(@select_options, @file_columns.include?('description') ? 'description' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.is_active'
    = select_tag "product[is_active]", options_for_select(@select_options, @file_columns.include?('product_active') ? 'product_active' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.brand'
    = select_tag "brand[name]", options_for_select(@select_options, @file_columns.include?('brand') ? 'brand' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.images'
    = select_tag "images[urls]", options_for_select(@select_options, @file_columns.include?('image_urls') ? 'image_urls' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-6.form-group
    %label= t 'activerecord.attributes.product.widgets'
    = select_tag "widget[name]", options_for_select(@select_options, @file_columns.include?('widget_name') ? 'widget_name' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-12
    %hr/
  .col-md-12
    %h2 Campaign details
  .col-md-4.form-group
    %label= t 'activerecord.attributes.campaign.source_id'
    = select_tag "campaign[source_id]", options_for_select(@select_options, @file_columns.include?('campaign_id') ? 'campaign_id' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-4.form-group
    %label= t 'activerecord.attributes.campaign.name'
    = select_tag "campaign[name]", options_for_select(@select_options, @file_columns.include?('campaign_name') ? 'campaign_name' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-4.form-group
    %label= t 'activerecord.attributes.campaign.url'
    = select_tag "campaign[url]", options_for_select(@select_options, @file_columns.include?('campaign_url') ? 'campaign_url' : nil ), class: "form-control", prompt: "Please Select"
  .col-md-12
    %hr/

  .col-md-12.form-group
    = link_to t('general.back'), products_path, class: "btn btn-default"
    = submit_tag "#{t 'import.title'}", class: "btn btn-success"
  .col-md-12